{
  "name": "product-agents",
  "version": "1.0.0",
  "description": "Monorepo for six product management agents",
  "private": true,
  "workspaces": [
    "apps/api",
    "packages/shared/*",
    "packages/product-agent",
    "packages/prd-agent",
    "packages/product-agent/*",
    "packages/skills/*",
    "packages/research-agent",
    "packages/research-agent/*",
    "packages/persona-agent/*",
    "packages/story-mapper-agent/*",
    "packages/story-generator-agent/*",
    "packages/story-refiner-agent/*",
    "frontend/product-agent"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "clean": "turbo run clean",
    "langfuse:up": "docker-compose -f infra/langfuse/docker-compose.yml up -d",
    "langfuse:down": "docker-compose -f infra/langfuse/docker-compose.yml down",
    "langfuse:logs": "docker-compose -f infra/langfuse/docker-compose.yml logs -f langfuse",
    "langfuse:reset": "docker-compose -f infra/langfuse/docker-compose.yml down -v && docker-compose -f infra/langfuse/docker-compose.yml up -d"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "turbo": "^1.13.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ai": "^5.0.9",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "zod": "^3.25.76"
  }
}
