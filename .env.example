# =============================================================================
# Product Agents - Centralized Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# All apps (api, frontend) will read from this single file

# =============================================================================
# API Keys
# =============================================================================

# OpenRouter API Key (required for model access)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Tavily API Key (required for research agent web search)
TAVILY_API_KEY=your_tavily_api_key_here

# =============================================================================
# Orchestrator Settings
# =============================================================================

# Default model for the orchestrator (controls all agents by default)
ORCHESTRATOR_MODEL=qwen/qwen-2.5-72b-instruct

# Optional: Override model specifically for skills (PRD section writers, etc.)
# Leave empty to use ORCHESTRATOR_MODEL for everything
# Useful if orchestrator model has issues with specific skills
SKILLS_MODEL=

# Default temperature (0-2, lower = more deterministic)
ORCHESTRATOR_TEMPERATURE=0.2

# Default max output tokens
ORCHESTRATOR_MAX_TOKENS=8000

# =============================================================================
# Subagent Model Overrides (optional)
# =============================================================================
# Leave empty to inherit from orchestrator model

# Persona agent model override
PERSONA_AGENT_MODEL=

# Research agent model (used for synthesis)
RESEARCH_AGENT_MODEL=google/gemini-3-flash-preview

# =============================================================================
# Runtime Settings
# =============================================================================

# Enable streaming responses (true/false)
STREAMING_ENABLED=true

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# Backend API (for frontend)
# =============================================================================

# Backend API URL (used by frontend to connect to API)
PRD_AGENT_URL=http://localhost:3001

# =============================================================================
# Langfuse Observability
# =============================================================================

# Feature flag - set to false to disable observability
OBSERVABILITY_ENABLED=true

# Observability transport
# - ingestion: Langfuse v2 self-hosted (uses /api/public/ingestion)
# - otel: Langfuse v3/cloud (uses OTLP /api/public/otel/v1/traces)
OBSERVABILITY_TRANSPORT=ingestion

# Langfuse API keys (get from Langfuse UI after first login)
# 1. Start Langfuse: npm run langfuse:up
# 2. Go to http://localhost:3100, create account
# 3. Create a project, copy API keys
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=

# Langfuse server URL
# - Local: http://localhost:3100
# - Cloud EU: https://cloud.langfuse.com
# - Cloud US: https://us.cloud.langfuse.com
LANGFUSE_BASE_URL=http://localhost:3100

# Docker Compose secrets (generate with: openssl rand -hex 32)
LANGFUSE_AUTH_SECRET=
LANGFUSE_SALT=
LANGFUSE_ENCRYPTION_KEY=
