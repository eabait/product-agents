{
  "name": "@product-agents/prd-agent-core",
  "version": "1.0.0",
  "description": "PRD Generator Agent core logic",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
      "build": "tsup src/index.ts src/http-server.ts --format esm,cjs --dts",
      "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
      "clean": "rm -rf dist",
      "lint": "eslint \"src/**/*.ts\"",
      "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
      "start-http": "npm run build && node dist/http-server.js",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:prompts": "jest --testNamePattern='Prompt Tracing'"
  },
  "dependencies": {
    "@product-agents/openrouter-client": "*",
    "@product-agents/agent-core": "*",
    "@product-agents/model-compatibility": "*",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "tsup": "^7.2.0",
    "typescript": "^5.0.0",
    "eslint": "^8.45.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "eslint-plugin-import": "^2.28.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  }
}