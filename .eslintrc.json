{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es2022": true,
    "jest": true
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-explicit-any": "off",
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "off",
    "no-undef": "off",
    "semi": "off",
    "quotes": "off",
    "comma-dangle": "off",
    "object-curly-spacing": "off",
    "array-bracket-spacing": "off",
    "indent": "off",
    "brace-style": "off",
    "eqeqeq": ["error", "always"],
    "curly": "off"
  },
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    "*.js",
    "*.mjs",
    "jest.config.js"
  ],
  "overrides": [
    {
      "files": ["**/*.ts"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
